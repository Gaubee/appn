{
  "references": [
    {
      "path": "./docs-src/tsconfig.json"
    }
  ],
  "compilerOptions": {
    "composite": true,
    "target": "es2021",
    "module": "es2022",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "noEmitOnError": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "verbatimModuleSyntax": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true
      }
    ],
    "types": [
      "mocha",
    ]
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": []
}

{
    "compilerOptions": {
        "target": "es2022",
        "module": "ESNext",
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "jsx": "react",
        "importHelpers": true,
        "noEmitOnError": false,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "inlineSources": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "verbatimModuleSyntax": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": false,
        "useDefineForClassFields": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitOverride": true,
        "plugins": [
            {
                "name": "ts-lit-plugin",
                "strict": true
            }
        ],
        "types": [
            "dom-navigation",
            "mocha",
            "react",
            "react-dom"
        ]
    },
}